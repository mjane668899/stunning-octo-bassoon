
<div class="search form-inline">
  <div class="form-group mb-2">
    <%= form_tag properties_path, method: :get do %>
    <%= text_field_tag :search, params[:search], :class => 'form-control', :placeholder => 'search by name' %>
  </div>
  <%= submit_tag ("Search"), :class => "btn btn-primary btn-search form-control mb-2"%>
  <% end %>
</div>
<p><%= link_to "Advanced Search", root_path %></p>
