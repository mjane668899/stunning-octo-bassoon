<div class="card w-50 form-center">
  <div class="card-body">
    <h5 class="card-title form-group">New Property</h5>
    <p class="card-text form-group">Complete the form below to create a new property</p>
    <%= form_for @property do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, :class =>'form-group form-control', :placeholder =>'PRIME LOCATION Private Retreat Stunning Views' %>
      <%= f.label :description %>
      <%= f.text_area :description, :class =>'form-group form-control', :placeholder =>'Located in a boutique block, this ground floor apartment is....' %>
      <%= f.label :street_number %>
      <%= f.number_field :street_number, :class =>'form-group form-control', :placeholder =>'Unit number',  min: 1 %>
      <%= f.label :address %>
      <%= f.text_field :address, :class =>'form-group form-control', :placeholder =>'Address Line 1'%>
      <%= f.label :suburb %>
      <%= f.text_field :suburb, :class =>'form-group form-control', :placeholder =>'Suburb' %>
      <%= f.label :state %>
      <%= f.text_field :state, :class =>'form-group form-control', :placeholder =>'State, Territory or Province' %>
      <%= f.label :country %>
      <%= f.text_field :country,:class =>'form-group form-control', :placeholder =>'Country' %>
      <%= f.label :guest %>
      <%= f.number_field :guest, :class =>'form-group form-control', :placeholder =>'Guests', min: 1 %>
      <%= f.label :bedroom %>
      <%= f.number_field :bedroom, :class =>'form-group form-control', :placeholder =>'Bedrooms', min: 0 %>
      <%= f.label :bed %>
      <%= f.number_field :bed, :class =>'form-group form-control', :placeholder =>'Beds', min: 1 %>
      <%= f.label :bathroom %>
      <%= f.number_field :bathroom, :class =>'form-group form-control', :placeholder =>'Bathrooms', min: 0 %>
      <%= f.submit "Submit", :class => "btn btn-primary col-12 form-group"%>
    </div>
    <% end %>
  </div>
</div>
