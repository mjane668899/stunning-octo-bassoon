<div class="form">
  <div class="form-group">
    <h1>Sign in</h1>
      <% if flash[:error].present? %>
        <h4 class="error-msg"><%= flash[:error] %></h4>
      <% end %>
  </div>
    <%= form_tag login_path do %>
        <div class='form-group'>
          <%= label_tag :email %>
          <%= email_field_tag :email %>
        </div>
        <div class='form-group'>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
      <%= submit_tag "Sign In", :class => 'btn-primary' %>
  <% end %>
</div>
